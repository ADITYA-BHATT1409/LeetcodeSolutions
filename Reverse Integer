class Solution {
    public int reverse(int x) {
        long reverse=0;
        int temp=Math.abs(x);
        while(temp>0){
            int dig=temp%10;
            reverse=reverse*10+dig;
            temp/=10;
        }
        if(reverse>Integer.MAX_VALUE){
            return 0;
        }
        if(x<0){
            return (int) reverse*-1;
        }
        return (int) reverse;
    }
}
