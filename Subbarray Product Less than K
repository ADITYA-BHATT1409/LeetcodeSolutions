class Solution {
    public int numSubarrayProductLessThanK(int[] nums, int k) {
        if(k<=1){
            return 0;
        }
        int currentproduct=1;
        int left=0;
        int count=0;
        for(int right=0;right<nums.length;right++){
            currentproduct*=nums[right];
            while(k<=currentproduct){
                currentproduct/=nums[left];
                left++;
            }
            count+=right-left+1;
            
        }
        return count;
        
    }
}
